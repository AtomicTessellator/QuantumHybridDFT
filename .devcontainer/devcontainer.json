{
    "name": "qhdft",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "remoteUser": "root",
    "context": "../",
    "dockerFile": "../Dockerfile",
    "runArgs": [
        "--gpus",
        "all",
        "--network=host",
        "--shm-size=2gb"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.isort",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-azuretools.vscode-docker",
                "ms-python.debugpy",
                "ms-vscode.makefile-tools",
                "njpwerner.autodocstring",
                "eamodio.gitlens"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh"
                    },
                    "bash": {
                        "path": "/bin/bash"
                    }
                },
                // linting
                "flake8.args": [
                    "--ignore=E203,W503",
                    "--max-line-length=256"
                ],
                // analysis
                "python.analysis.extraPaths": [
                    "/usr/local/lib/python3.12/site-packages"
                ],
                "python.defaultInterpreterPath": "/usr/local/bin/python3",
                "python.analysis.include": [
                    "**/*"
                ],
                "python.analysis.exclude": [
                    "**/node_modules/**",
                    "**/.venv/**",
                    "**/dist/**",
                    "**/dist/**",
                    "**/__pycache__/**"
                ],
                "python.languageServer": "Pylance",
                "python.analysis.logLevel": "Trace",
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.diagnosticMode": "workspace",
                "python.analysis.watchSearchPaths": true,
                "python.analysis.indexing": true,
                "python.analysis.autoImportCompletions": true,
                "python.analysis.autoImportUserSymbols": true,
                "python.analysis.inlayHints.functionReturnTypes": true,
                "python.analysis.inlayHints.variableTypes": true,
                "python.analysis.packageIndexDepths": [
                    {
                        "name": "",
                        "depth": 2
                    }
                ],
                "python.analysis.memory.keepLibraryAst": true,
                "python.analysis.completeFunctionParens": true,
                "python.analysis.autoSearchPaths": false,
                "python.analysis.diagnosticSeverityOverrides": {
                    "reportUnknownMemberType": "none",
                    "reportUnknownVariableType": "none"
                },
                // editor
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "explicit"
                },
                "editor.bracketPairColorization.enabled": true,
                "editor.guides.bracketPairs": true,
                "editor.suggestSelection": "first",
                "editor.minimap.enabled": false,
                // tests: uncomment if adding tests
                "python.testing.pytestEnabled": false,
                "python.testing.unittestEnabled": false,
                "python.testing.nosetestsEnabled": false,
                "python.testing.autoTestDiscoverOnSaveEnabled": false,
                // formatting
                "isort.args": [
                    "--profile",
                    "black"
                ],
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "ms-python.black-formatter",
                },
                // --- remote, git, terminal settings ---
                "remote.downloadExtensionsLocally": true,
                "remote.restoreForwardedPorts": true,
                "remote.localPortHost": "allInterfaces",
                "git.autofetch": true,
                "git.confirmSync": false,
                "terminal.integrated.enableMultiLinePasteWarning": "never",
                "terminal.integrated.persistentSessionReviveProcess": "never",
                // --- files settings ---
                "files.associations": {
                    "*.py": "python",
                    "*.ipynb": "jupyter-notebook",
                    "*.sh": "shellscript",
                    "Dockerfile*": "dockerfile"
                },
                "files.watcherExclude": {
                    "**/node_modules/**": true,
                    "**/.venv/**": true,
                    "**/dist/**": true,
                    "**/__pycache__/**": true
                }
            }
        }
    },
    "postCreateCommand": "mkdir -p /root/.ssh && cp -r /tmp/.ssh/* /root/.ssh/ && chmod 600 /root/.ssh/* && chmod 700 /root/.ssh && pip install black flake8 isort",
    "postStartCommand": "git config --global core.editor 'code --wait'",
    "mounts": [
        // Read-only mount of SSH directory
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/tmp/.ssh,type=bind,consistency=cached,readonly"
    ]
}